<?xml version="1.0" encoding="utf-8"?>
<rMateGrid>
<!--
align 마스크 패턴 문자열보다 데이타가 적을 경우 문자열의 정렬 기준을 지정 (left,right중 택일, 기본 left)
formatString 마스크 패턴
numberSymbol 마스크 패턴에서 숫자를 나타내는 문자 (기본 #)
-->
	<NumberMaskFormatter id="maskfmt" formatString="###-###"/>
	<DataGrid id="dg1" horizontalScrollPolicy="auto">
		<columns>
			<DataGridColumn dataField="area" headerText="지역"/>
			<DataGridColumn dataField="code" headerText="우편번호" formatter="{maskfmt}"/>
			<DataGridColumn dataField="address" headerText="주소"/>
		</columns>
	</DataGrid>
</rMateGrid>